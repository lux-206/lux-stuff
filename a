from selenium import webdriver as wd
from selenium.webdriver.common.keys import Keys
import chromedriver_binary
import time
import os

def Wait():
    os.system("cls")
    print("Wait")

directory = os.getcwd()

File = open(directory + "\Product_Prices.txt", 'w')

def Save_data(data):
    File.write(data)

Wait()

wd = wd.Chrome()

time.sleep(2)

os.system("cls")
Product_name = input(str("Product Name : "))

wd.get("https://www.google.com/search?q=" + Product_name + "&tbm=shop")

Wait()

time.sleep(3)

Infos = wd.find_elements_by_class_name("KZmu8e")

Wait()

for i in Infos:
    Save_data(i.text)
    Save_data("\n\n")

os.system("cls")
print("Closing...")
File.close()
wd.quit()
